<launch>
    <!-- Config file path - adjust based on your camera setup -->
    <arg name="config_path" default="/root/catkin_ws/src/VINS-Fusion/config/euroc/euroc_mono_imu_config.yaml" />
    
    <!-- VINS Estimator Node -->
    <node name="vins_estimator" pkg="vins" type="vins_node" output="screen">
        <param name="config_file" type="string" value="$(arg config_path)" />
    </node>
    
    <!-- Optional: Pose Graph for loop closure -->
    <!-- Uncomment if you want loop closure functionality -->
    <node name="pose_graph" pkg="pose_graph" type="pose_graph_node" output="screen">
        <param name="config_file" type="string" value="$(arg config_path)" />
        <param name="visualization_shift_x" type="int" value="0" />
        <param name="visualization_shift_y" type="int" value="0" />
        <param name="skip_cnt" type="int" value="0" />
        <param name="skip_dis" type="double" value="0" />
    </node>
</launch>