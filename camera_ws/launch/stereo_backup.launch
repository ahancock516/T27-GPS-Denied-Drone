<launch>
  <!-- Left Camera -->
  <node pkg="raspicam_node" type="raspicam_node" name="raspicam_left" ou>    <param name="camera_frame_id" value="left_camera" />
    <param name="camera_info_url" value="package://raspicam_node/camera_>    <param name="width" value="1280" />
    <param name="height" value="720" />
    <param name="framerate" value="30" />
    <param name="video_device" value="/dev/video0" />
    <remap from="/raspicam_node/image" to="/camera/left/image_raw" />
    <remap from="/raspicam_node/camera_info" to="/camera/left/camera_inf>  </node>

  <!-- Right Camera -->
  <node pkg="raspicam_node" type="raspicam_node" name="raspicam_right" o>    <param name="camera_frame_id" value="right_camera" />
    <param name="camera_info_url" value="package://raspicam_node/camera_>    <param name="width" value="1280" />
    <param name="height" value="720" />
    <param name="framerate" value="30" />
    <param name="video_device" value="/dev/video1" />
    <remap from="/raspicam_node/image" to="/camera/right/image_raw" />
    <remap from="/raspicam_node/camera_info" to="/camera/right/camera_in>  </node>
</launch>
